<%=form_for :ad do |a|%>
<%= a.label :Title%>
<br>
<%= a.text_field :title%>
<br><br>
<%= a.label :Description%>
<br>
<%= a.text_area :description, size: "35x7"%>
<br>

<%=fields_for :vehicle do |v|%>
<%= v.label :Make%>
<br>
<%= v.select :make,(["Mercedes" , "Man" , "Volvo" , "Chevrolet"]) %>
<br><br>
<%= v.label :Model%>
<br>
<%=v.select :model,([ "i10" , "w30" , "503"])%>
<br><br>

<%if @van != nil%>
<%=fields_for :van do |van|%>
<%= van.label :Capacity%>
<br>
<%=van.number_field :capacity%>
<br>

<%= van.label :Mileage%>
<br>
<%=van.number_field :mileage%>
<br>
<%end%>
<%elsif @semitrailer != nil%>
<%=fields_for :semitrailer do |s|%>
<%= s.label :Capacity%>
<br>
<%=s.number_field :capacity%>
<br>
<%end%>
<%elsif @semitrailertruck != nil%>
<%=fields_for :semitrailertruck do |st|%>
<%= st.label :Mileage%>
<br>
<%=st.number_field :mileage%>
<br>
<%end%>
<%elsif @heavytruck != nil%>
<%=fields_for :heavytruck do |h|%>
<%= h.label :Capacity%>
<br>
<%=h.number_field :capacity%>
<br>
<%= h.label :Mileage%>
<br>
<%=h.number_field :mileage%>
<br>
<%end%>
<%end%>

Manufacture year<br>
<%=v.number_field :manyear%>
<br>
<br>
<%= v.label :Country%>
<br>
<%=v.select :country ,(["Egypt" , "madagascar"])%>

<br>
<br>
Number of Axels<br>
<%=v.select :axles, (["1","2","3","4","5","6","7","8"])%>
<br><br>

<%= v.label :Gearbox%>
<br>
<%=v.select :gearbox , (["Automatic", "semi Automatic" ,"Manual"])%>
<br>

<br>
<%= v.label :Colour%>
<br>
<%=v.select :colour ,(["white","black","yellow","brown","green","red","orange","blue","grey"])%>
<br>

<br>
<%= v.label :Price%>
<br>
<%=v.number_field :price%>
<br><br>
