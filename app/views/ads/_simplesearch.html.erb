
<%=form_tag "/search/1", :method => 'get' do%>
<table>
<tr>
<td><%= t("ad.manu")%></td>

 <td><%= select_tag(:make, options_for_select([['Mercedes', 'Mercedes'],
                 ['Man', 'Man'],['Volvo','Volvo'],['Chevrolet','Chevrolet']], params[:make]), :include_blank => true) %></td>

<td><%= t("ad.model")%></td>

