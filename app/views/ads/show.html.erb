<%=@vehicle.colour%><br><br>
<b>السعر :</b>
<%= number_with_delimiter(@vehicle.price, :delimiter => ',')%><br><br>
<%if @van !=nil %>
<b>حمولة: </b>
<%=@van.capacity%><br><br>
<b>مسافة: </b>
<%=@van.mileage%><br><br>
<%elsif @semitrailer !=nil%>
<b>Capacity</b><br>
<%=@semitrailer.capacity%><br>
<%elsif @semitrailertruck !=nil%>
<b>Mileage</b><br>
<%=@semitrailertruck.mileage%><br>
<%elsif @heavytruck !=nil%>
<b>Capacity</b><br>
<%=@heavytruck.capacity%><br>
<b>Mileage</b><br>
<%=@heavytruck.mileage%><br>
<br>
<%end%>
<%if @ad.description != ""%>
<b>الوصف:</b>
<%=@ad.description%>
<br>
<%end%>
</div>
