<%if @make.new%>
جديدة
<%else%>
مستعملة
<%end%> <br>
<%if @make.imported%>
مستوردة
<%else%>
محلية
<%end%> <br>
<%if @make.purchase%>
للبيع
<%else%>
للإيجار
<%end%><br>
<br>

<b>سنة الانتاج :</b>
<%=@vehicle.manyear%><br><br>
<b>البلد :</b>
<%=@vehicle.country%><br><br>
