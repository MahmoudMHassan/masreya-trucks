

<%if request.original_fullpath == "/ads/new"%>
<div style="text-align:center;width:700px;margin: 10px auto;">
  <button onclick="location.href='/ads/new?type=van'" id="newvanbutton">
<div style="position:relative; top:20px;">عربة</div>
  </button>
  <button onclick="location.href='/ads/new?type=semitrailer'" id="newsemibutton">
<div style="position:relative; top:20px;">شبه مقطورة</div>
  </button>
  <button onclick="location.href='/ads/new?type=semitrailertruck'" id="newsttbutton">
<div style="position:relative; top:20px;">شاحنة شبه مقطورة</div>
  </button>
  <button onclick="location.href='/ads/new?type=heavytruck'" id="newheavybutton">
<div style="position:relative; top:20px;">شاحنة ثقيلة</div>
  </button><br><br><br><br>
  اختر نوع الشاحنة لإضافة
</div>
<%elsif ["/ads/new?type=van","/ads/new?type=semitrailer","/ads/new?type=heavytruck","/ads/new?type=semitrailertruck"].include? request.original_fullpath%>
<div style="width:700px;margin: 10px auto;">
<%if request.original_fullpath == "/ads/new?type=van"%>
  <button onclick="location.href='/ads/new?type=van'" id="newvanbutton" style="background-color:#9DE56A">
  <%else%>
  <button onclick="location.href='/ads/new?type=van'" id="newvanbutton">
  <%end%>
<div style="position:relative; top:20px;">عربة</div>
  </button>
  <%if request.original_fullpath == "/ads/new?type=semitrailer"%>
  <button onclick="location.href='/ads/new?type=semitrailer'" id="newsemibutton" style="background-color:#9DE56A">
  <%else%>
  <button onclick="location.href='/ads/new?type=semitrailer'" id="newsemibutton">
  <%end%>
<div style="position:relative; top:20px;">شبه مقطورة</div>
  </button>
  <%if request.original_fullpath == "/ads/new?type=semitrailertruck"%>
  <button onclick="location.href='/ads/new?type=semitrailertruck'" id="newsttbutton" style="background-color:#9DE56A">
  <%else%>
  <button onclick="location.href='/ads/new?type=semitrailertruck'" id="newsttbutton">
  <%end%>
<div style="position:relative; top:20px;">شاحنة شبه مقطورة</div>
  </button>
  <%if request.original_fullpath == "/ads/new?type=heavytruck"%>
  <button onclick="location.href='/ads/new?type=heavytruck'" id="newheavybutton" style="background-color:#9DE56A">
  <%else%>
  <button onclick="location.href='/ads/new?type=heavytruck'" id="newheavybutton">
  <%end%>
<div style="position:relative; top:20px;">شاحنة ثقيلة</div>
  </button>
</div>
<div id = "adwrapper">
<%=form_for :ad do |a|%>


<br>
العنوان: <%= a.text_field :title%>
<br><br>

	<%=fields_for :vehicle do |v|%>
انتاج: <%= v.select :make,(["Mercedes" , "Man" , "Volvo" , "Chevrolet"]) %>
	<br><br>
	الموديل: <%= v.select :model,([ "i10" , "w30" , "503"])%>
	<br><br>

	<%if request.original_fullpath == "/ads/new?type=van"%>
	<%=fields_for :van do |van|%>
	حمولة: <%= van.check_box :capacity%>
	<br><br>
مسافة: <%= van.number_field :mileage%>
	<br><br>
	<%end%>
	<%elsif request.original_fullpath == "/ads/new?type=semitrailer"%>
	<%=fields_for :semitrailer do |s|%>
	حمولة: <%= s.check_box :capacity%>
	<br><br>
	<%end%>
	<%elsif request.original_fullpath == "/ads/new?type=semitrailertruck"%>
	<%=fields_for :semitrailertruck do |st|%>
	مسافة: <%= st.number_field :mileage%>
	<br><br>
	<%end%>
	<%elsif request.original_fullpath == "/ads/new?type=heavytruck"%>
	<%=fields_for :heavytruck do |h|%>
	حمولة: <%= h.check_box :capacity%>
	<br><br>
	مسافة:  <%= h.number_field :mileage%>
	<br><br>
	<%end%>
	<%end%>

	سنة الانتاج: <%= v.number_field :manyear%>
	<br><br>
	البلد: <%= v.select :country ,(["Egypt" , "madagascar"])%>

	<br><br>
	
	المحاور النقلات: <%= v.select(:axles) do %>
      <% [['1', '1'], ['2', '2'], ['3', '3'], ['3>', '4']].each do |c| -%>
	<%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
      <% end %>
	<br>
	<br>

	عجلة السرعة: <%= v.select(:gearbox) do %>
      <% [['Automatic', true], ['Manual', false]].each do |c| -%>
	<%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
      <% end %>
	<br>
	<br>
	اللون: <%= v.select :colour ,(["white","black","yellow","brown","green","red","orange","blue","grey"])%>
	<br>

	<br>
	السعر: <%= v.number_field :price%>
	<br>
	<br>
	<%end%>
	<%=fields_for :make do |m|%>

	جديدة؟ <%= m.check_box :new%>
	<br><br>
	مستوردة؟ <%= m.check_box :imported%>
	<br><br>
	للبيع؟ <%= m.check_box :purchase%>
	<br>
	<br>
	<%end%>
	الوصف: (اختياري)
	<br>
	<%= a.text_area :description, size: "35x7"%>
	
	<br>
	<%= a.file_field :image%><br>
	<%= a.file_field :image1 %><br>
	<%= a.file_field :image2 %><br>
	<%= a.file_field :image3 %><br>
	<%= a.file_field :image4 %><br>
<div style="margin-right:50%">
	<%= a.submit "إضافة الإعلان"%>
	</div>
	<%end%>
	<%end%>

</div>




