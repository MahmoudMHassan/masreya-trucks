<div id ="adwrapper">
الترتيب
<%sortpath = request.original_fullpath.split("&sort=")[0]%>
<!--select tag for sorting method (change default depending on params[:sort])  -->
<select id="sortlist">
    <%if params[:sort] == "0"%>
    <option selected="selected" value=<%="#{sortpath}&sort=0"%>>↑ سعر</option>
    <%else%>
    <option value=<%="#{sortpath}&sort=0"%>>↑ سعر</option>
    <%end%>
    <%if params[:sort] == "1"%>
    <option selected="selected" value=<%="#{sortpath}&sort=1"%>>↓ سعر</option>
    <%else%>
    <option value=<%="#{sortpath}&sort=1"%>>↓ سعر</option>
    <%end%>
    <%if params[:sort] == "2"%>
    <option selected="selected" value=<%="#{sortpath}&sort=2"%>>↑ سنة الإنتاج</option>
    <%else%>
    <option value=<%="#{sortpath}&sort=2"%>>↑ سنة الإنتاج</option>
    <%end%>
    <%if params[:sort] == "3"%>
    <option selected="selected" value=<%="#{sortpath}&sort=3"%>>↓ سنة الإنتاج</option>
    <%else%>
    <option value=<%="#{sortpath}&sort=3"%>>↓ سنة الإنتاج</option>
    <%end%>
    <%if params[:sort] == "4"%>
    <option selected="selected" value=<%="#{sortpath}&sort=3"%>>↑ تاريخ الإعلان</option>
    <%else%>
    <option value=<%="#{sortpath}&sort=4"%>>↑ تاريخ الإعلان</option>
    <%end%>
    <%if params[:sort] == "5"%>
    <option selected="selected" value=<%="#{sortpath}&sort=3"%>>↓ تاريخ الإعلان</option>
    <%else%>
    <option value=<%="#{sortpath}&sort=5"%>>↓ تاريخ الإعلان</option>
    <%end%>
    
    
    
</select>
<%adscount = @ads.count%>
<br>
وجد <%=adscount%> نتيجة <br>
<% pageads = @ads.limit(10).offset((params[:page].to_i-1)*10)%>
<%pageads.each do |a|%>
<div class = "post_wrapper">
<div style="float:right;width:200px;">
<%= link_to("/ads/#{a.ad.id}") do %>
  <%= image_tag a.ad.image_url.to_s,size:"150x150" %>
<% end %>
</div>
<div style="float:center;">
<%=link_to a.ad.title, "/ads/#{a.ad.id}"%><br>
<%= a.vehicle.make%> | <%=a.vehicle.model%><br>
<%= t("ad.price")%>:<%= number_with_delimiter(a.vehicle.price, :delimiter => ',')%>
السنة: <%= a.vehicle.manyear%>
<br>
<%if a.ad.description.length > 300%>
<%=a.ad.description.first(300)%> ... <br>
<%else%>
<%=a.ad.description%><br>
<%end%>
</div>
</div>
<%end%>
<% path = request.original_fullpath%>
<%if adscount > 10 %>
<%if params[:page] != "1"%>
<%=link_to "↠", "#{path.sub "/search/#{params[:page]}", "/search/1"}", {:style => 'color:black;'}%>
<%=link_to "→", "#{path.sub "/search/#{params[:page]}", "/search/#{params[:page].to_i-1}"}", {:style => 'color:black;'}%>

<%end%>
<%i=1%>
<%count = 4%>
<%until i > 8%>
<%if (params[:page].to_i)+i-count > 0%>
<%if adscount>((params[:page].to_i)+i-count-1)*10%>
<%if i == count %>
<%=link_to "#{(params[:page].to_i)+i-count}", "#{path.sub "/search/#{params[:page]}", "/search/#{params[:page].to_i+i-count}"}", {:style => 'color:black;'}%>
<%else%>
<%=link_to "#{(params[:page].to_i)+i-count}", "#{path.sub "/search/#{params[:page]}", "/search/#{params[:page].to_i+i-count}"}"%>
<%end%>
<%end%>
<%else%>
<%count = count - 1%>
<%i = i - 1%>
<%end%>
<%i+=1%>
<%end%>
<!--<%if ((params[:page].to_i)+i-count-1) < (adscount / 10.0).ceil %>

<%end%>-->
<%if (adscount > ((params[:page].to_i))*10)%>
<%=link_to "←", "#{path.sub "/search/#{params[:page]}", "/search/#{params[:page].to_i+1}"}", {:style => 'color:black;'}%>
<%=link_to "↞", "#{path.sub "/search/#{params[:page]}", "/search/#{(adscount / 10.0).ceil}"}", {:style => 'color:black;'}%>
<%end%>
<%end%>

</div>
